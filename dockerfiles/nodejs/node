FROM dsegura97/nginx

RUN apt install -yq --no-install-recommends \
    curl -fssl https://deb.nodesource.com/setup_20.x | bash - &&\
    apt install -yq nodejs \
    npm

RUN mkdir -p /root/admin/node
RUN mkdir -p /root/admin/node/proyectos/iawprojects
WORKDIR /root/admin/node
COPY ./proyectos/proyecto-iaw /root/admin/node/proyectos/iawprojects

COPY ./dockerfiles/node/admin/start.sh .
RUN chmod +x /root/admin/node/start.sh

ENTRYPOINT [ "./start.sh" ]