FROM dsegura97/nginx

# Instalar Node y npm
RUN apt update && apt install -y nodejs npm && rm -rf /var/lib/apt/lists/*

# Directorio de la app
WORKDIR /root/admin/node/proyectos/iaw

# Copiar script de arranque
COPY dockerfiles/nodejs/admin/start.sh .

# Dar permisos
RUN chmod +x ./start.sh

# Exponer puertos (opcional)
EXPOSE 3000 80

# Ejecutar Node
ENTRYPOINT ["./start.sh"]
