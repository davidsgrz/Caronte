FROM dsegura97/nginx 

RUN apt install -yq --no-install-recommends \
    nodejs \
    npm

RUN mkdir -p /root/admin/node
RUN mkdir -p /root/admin/node/proyectos/iaw
WORKDIR /root/admin/node
COPY ./proyectos/proyecto-iaw/ /root/admin/node/proyectos/iaw/

COPY ./dockerfiles/nodejs/admin/start.sh .
RUN chmod +x /root/admin/node/start.sh

ENTRYPOINT [ "./start.sh" ]