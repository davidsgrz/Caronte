FROM ubuntu 
# ARG USUARIO
# ENV USER = ${USUARIO}
# ARG PASSWORD
RUN apt update && apt install -yq --no-install-recommends \
    nano \
    git curl wget \
    iputils-ping net-tools \
    sudo \
    openssh \
#Copiar los scripts de inicio (entrypoint)
    RUN mkdir -p /root/admin/base
#fijamos en el contenedor el directorio raiz
WORKDIR /root/admin/base
#contexto (el punto)
RUN mkdir ./common
COPY ./dockerfiles/base/admin/ .
COPY ./common/id_ed25519.pub ./common
RUN chmod +x ./start.sh


ENTRYPOINT [ "./start.sh" ]

