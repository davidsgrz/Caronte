FROM dsegura97/nodejs

# Crear y entrar al directorio de trabajo
RUN mkdir -p /root/admin/proyecto-iaw
WORKDIR /root/admin/proyecto-iaw

# Copiar SOLO el script correcto
COPY dockerfiles/proyecto-iaw/admin/start.sh .

# Dar permisos
RUN chmod +x ./start.sh

# Exponer puertos
EXPOSE 3000 80

# Ejecutar el script
ENTRYPOINT ["./start.sh"]