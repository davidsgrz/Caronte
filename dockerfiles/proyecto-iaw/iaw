FROM dsegura97/nodebase

WORKDIR /app

# Copiamos el React REAL
COPY proyectos/proyecto-iaw/package*.json ./
RUN npm install

COPY proyectos/proyecto-iaw/ .
RUN npm run build

# Pasamos el build a nginx
RUN rm -rf /var/www/html/* \
 && cp -r build/* /var/www/html/

EXPOSE 3000 80

CMD ["nginx", "-g", "daemon off;"]
